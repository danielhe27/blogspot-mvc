<section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5">
                    <h1 class="title has-text-centered">Sign Up</h1>
                   <form class="signup-form" action="/api/users" method="POST">
    <div class="field">
        <label class="label">Username</label>
        <div class="control">
            <input class="input" type="text" id="username-signup" name="username" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input" type="email" id="email-signup" name="email" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input" type="password" id="password-signup" name="password" required>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button type="submit" class="button is-link">Sign Up</button>
        </div>
    </div>
</form>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/signup.js"></script>

