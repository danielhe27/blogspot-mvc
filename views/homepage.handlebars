<section class="section">
    <div class="container">
        <h1 class="title">Welcome to Blogspot MVC</h1>
        {{#if loggedIn}}
        <!-- New Form for Submitting Posts -->
        <div class="box">
            <form id="new-post-form">
                <div class="field">
                    <label class="label" for="postTitle">Title</label>
                    <div class="control">
                        <input class="input" type="text" id="postTitle" name="title" placeholder="Enter post title" required>
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="postContent">Content</label>
                    <div class="control">
                        <textarea class="textarea" id="postContent" name="content" placeholder="Enter post content" required></textarea>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-link">Submit Post</button>
                    </div>
                </div>
            </form>
        </div>
        {{/if}}
        <!-- Existing Posts Display -->
        <div class="posts">
            {{#each posts}}
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">{{title}}</p>
                </header>
                <div class="card-content">
                    <div class="content">
                        {{content}}
                        <br>
                        <p>Created by: {{user.username}}</p>
                        <p>Created at: {{formatDate createdAt}}</p>
                        <button type="button" class="button is-info update-btn" data-post-id="{{id}}">Update</button>
                        <div class="update-form" style="display: none;">
                            <form id="update-post-form-{{id}}" action="/api/posts/{{id}}" method="PUT">
                                <div class="field">
                                    <label class="label" for="updatePostTitle">Title</label>
                                    <div class="control">
                                        <input class="input" type="text" id="updatePostTitle" name="title" value="{{title}}" placeholder="Enter post title" required>
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label" for="updatePostContent">Content</label>
                                    <div class="control">
                                        <textarea class="textarea" id="updatePostContent" name="content" placeholder="Enter post content" required>{{content}}</textarea>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <button type="submit" class="button is-link">Update Post</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<script src="/js/add-comment.js"></script>
<script src="/js/update-post.js"></script>
