<section class="section">
    <div class="container">
        <h1 class="title">Welcome to Blogspot MVC</h1>
        {{#if loggedIn}}
        <!-- New Form for Submitting Posts -->
        <div class="box">
            <form id="new-post-form">
                <div class="field">
                    <label class="label" for="postTitle">Title</label>
                    <div class="control">
                        <input class="input" type="text" id="postTitle" name="title" placeholder="Enter post title" required>
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="postContent">Content</label>
                    <div class="control">
                        <textarea class="textarea" id="postContent" name="content" placeholder="Enter post content" required></textarea>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-link">Submit Post</button>
                    </div>
                </div>
            </form>
        </div>
        {{/if}}
        <!-- Existing Posts Display -->
        <div class="posts">
            {{#each posts}}
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">{{title}}</p>
                    <p class="card-created-at">Created at: {{format_date created_at}}</p>
                </header>
                <div class="card-content">
                    <div class="content">
                        {{content}}
                        <br>
                        <footer class="footer-card">By: {{user.username}}</footer>

                        <!-- Add Comment Form -->
                        <form class="comment-form" style="display: none;">
                            <div class="field">
                                <label class="label">Add a Comment</label>
                                <div class="control">
                                    <textarea class="textarea" placeholder="Enter your comment"></textarea>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <button type="button" class="button is-link add-comment-btn" data-post-id="{{id}}">Add Comment</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<script src="/js/add-comment.js"></script>
<script src="/js/update-post.js"></script>
<script src="/utils/helpers.js"></script>
